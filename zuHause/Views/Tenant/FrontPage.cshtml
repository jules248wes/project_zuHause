@{
    ViewData["Title"] = "首頁";
}

<main>
    @* 公告跑馬燈 *@
    <div class="announcement-marquee-container">
        <div class="announcement-marquee-content">
            📢 本網站將於 @DateTime.Now.AddDays(3).ToString("yyyy-MM-dd") 進行系統維護，請提前儲存您的資料！
        </div>
    </div>

    @* 輪播圖和搜尋框 *@
    <div class="container carousel-container">
        <div id="propertyCarousel" class="carousel slide" data-bs-ride="carousel">
            <div class="carousel-inner" style="height: 400px; background-color: #e9ecef;">
                <div class="carousel-item active">
                    <img src="https://via.placeholder.com/1200x400?text=Carousel+Image+1" class="d-block w-100" alt="Property Image 1">
                    <div class="carousel-caption d-none d-md-block">
                        <h5>房源標題 1</h5>
                        <p>簡短描述 1</p>
                    </div>
                </div>
                <div class="carousel-item">
                    <img src="https://via.placeholder.com/1200x400?text=Carousel+Image+2" class="d-block w-100" alt="Property Image 2">
                    <div class="carousel-caption d-none d-md-block">
                        <h5>房源標題 2</h5>
                        <p>簡短描述 2</p>
                    </div>
                </div>
            </div>
            <button class="carousel-control-prev" type="button" data-bs-target="#propertyCarousel" data-bs-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="visually-hidden">Previous</span>
            </button>
            <button class="carousel-control-next" type="button" data-bs-target="#propertyCarousel" data-bs-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="visually-hidden">Next</span>
            </button>
        </div>


        @* 確保頁面頂部有引入 Bootstrap JS 和你的 custom JS *@
        @* 例如在 _Layout.cshtml 或此頁面底部引入 *@
        @* <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script> *@
        @* <script src="~/js/site.js"></script> (如果你的 JS 在 site.js) *@
        @* 或者直接在當前頁面加入 <script> 區塊 *@

        <div class="search-box-overlay">
            <div class="input-group">
                <button class="btn btn-light dropdown-toggle" type="button" data-bs-toggle="dropdown" aria-expanded="false" id="cityDropdownBtn">
                    台北市 @* 預設顯示台北市，與圖片一致 *@
                </button>

                <div class="dropdown-menu dropdown-menu-grid row g-2" aria-labelledby="cityDropdownBtn" style="min-width: 400px; padding: 15px;">
                    <div class="col-6 col-md-2">
                        @* 北部地區列 *@
                        <h6 class="dropdown-header">北部</h6>
                        <div class="custom-city-list">
                            <a class="dropdown-item" href="#" data-city="基隆市">基隆市</a>
                            <a class="dropdown-item active" href="#" data-city="台北市">台北市</a> @* 預設 active，用於粗體變色 *@
                            <a class="dropdown-item" href="#" data-city="新北市">新北市</a>
                            <a class="dropdown-item" href="#" data-city="桃園市">桃園市</a>
                            <a class="dropdown-item" href="#" data-city="新竹縣">新竹縣</a>
                            <a class="dropdown-item" href="#" data-city="新竹市">新竹市</a>
                            <a class="dropdown-item" href="#" data-city="宜蘭縣">宜蘭縣</a>
                        </div>
                    </div>

                    <div class="col-6 col-md-2">
                        @* 中部地區列 *@
                        <h6 class="dropdown-header">中部</h6>
                        <div class="custom-city-list">
                            <a class="dropdown-item" href="#" data-city="苗栗縣">苗栗縣</a>
                            <a class="dropdown-item" href="#" data-city="台中市">台中市</a>
                            <a class="dropdown-item" href="#" data-city="彰化縣">彰化縣</a>
                            <a class="dropdown-item" href="#" data-city="南投縣">南投縣</a>
                            <a class="dropdown-item" href="#" data-city="雲林縣">雲林縣</a>
                        </div>
                    </div>

                    <div class="col-6 col-md-2">
                        @* 南部地區列 *@
                        <h6 class="dropdown-header">南部</h6>
                        <div class="custom-city-list">
                            <a class="dropdown-item" href="#" data-city="嘉義縣">嘉義縣</a>
                            <a class="dropdown-item" href="#" data-city="嘉義市">嘉義市</a>
                            <a class="dropdown-item" href="#" data-city="台南市">台南市</a>
                            <a class="dropdown-item" href="#" data-city="高雄市">高雄市</a>
                            <a class="dropdown-item" href="#" data-city="屏東縣">屏東縣</a>
                        </div>
                    </div>

                    <div class="col-6 col-md-2">
                        @* 東部地區列 *@
                        <h6 class="dropdown-header">東部</h6>
                        <div class="custom-city-list">
                            <a class="dropdown-item" href="#" data-city="花蓮縣">花蓮縣</a>
                            <a class="dropdown-item" href="#" data-city="台東縣">台東縣</a>
                        </div>
                    </div>

                    <div class="col-6 col-md-2">
                        @* 離島地區列 *@
                        <h6 class="dropdown-header">離島</h6>
                        <div class="custom-city-list">
                            <a class="dropdown-item" href="#" data-city="澎湖縣">澎湖縣</a>
                            <a class="dropdown-item" href="#" data-city="金門縣">金門縣</a>
                            <a class="dropdown-item" href="#" data-city="連江">連江</a>
                        </div>
                    </div>
                </div>
                <input type="text" class="form-control" placeholder="請輸入關鍵字" aria-label="Keyword input" id="searchInput">
                <button class="btn btn-primary" type="button" id="searchBtn"><i class="bi bi-search"></i> 搜尋</button>
            </div>
            <div id="searchHistory" class="text-start d-flex flex-wrap gap-2 mt-2">
                @* 搜尋歷史紀錄將通過 JavaScript 動態載入，但切版時可以忽略其內容 *@
            </div>
        </div>
    </div>

    @* 猜你喜歡區塊 *@
    <section class="container my-5">
        <div class="d-flex justify-content-between align-items-center mb-3">
            <h2>
                猜你喜歡
                <i class="bi bi-search" data-bs-toggle="tooltip" data-bs-placement="top" title="根據使用者的進階搜尋內容顯示，若未搜尋過則根據填寫的主要承租區域而定。"></i>
            </h2>
            <a href="@Url.Action("Results", "Search")" class="text-decoration-none h5">
                探索更多物件 <i class="fas fa-chevron-right"></i>
            </a>
        </div>
        <div class="row row-cols-1 row-cols-md-4 g-4">
            @* Changed to row-cols-md-4 for better layout on medium screens and up *@
            @for (int i = 0; i < 8; i++) @* 範例：顯示8個卡片，與圖片一致 *@
            {
                <div class="col">
                    <div class="card card-listing">
                        <img src="https://via.placeholder.com/400x250?text=Property+Image" class="card-img-top" alt="Property Image">
                        <div class="card-body">
                            <div class="d-flex justify-content-between align-items-center mb-2">
                                <h5 class="card-title mb-0">台中市南屯區</h5> @* 房源標題 *@
                                <button type="button" class="btn btn-link p-0 love-button" data-favorited="false">
                                    <i class="bi bi-heart love-icon empty"></i> @* 預設空心愛心 *@
                                </button>
                            </div>
                            <p class="card-text">
                                <span class="text-danger">10000</span>/月<br>
                                可養寵
                            </p> @* 範例租金 *@
                            <div class="text-end">
                                @* 將了解更多按鈕靠右 *@
                                <a href="@Url.Action("Detail", "Property", new { id = i + 1 })" class="btn btn-sm btn-outline-primary">了解更多</a> @* 點選顯示該房源 *@
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </section>

    @* 特色房源區塊 *@
    <section class="container my-5">
        <div class="row align-items-center">
            <div class="col-md-6 mb-4 mb-md-0">
                @* Added mb-4 for spacing on smaller screens *@
                <div class="bg-light p-3 rounded d-flex align-items-center justify-content-center" style="height: 300px; overflow: hidden;">
                    @* Adjusted style *@
                    <img src="https://via.placeholder.com/600x300?text=Featured+Property" class="img-fluid" alt="Featured Property">
                </div>
            </div>
            <div class="col-md-6">
                <div class="d-flex justify-content-between align-items-center mb-2">
                    <h2 class="mb-0">
                        房源標題
                        <button type="button" class="btn btn-link p-0 love-button" data-favorited="true">
                            <i class="bi bi-heart love-icon empty"></i>
                        </button>
                    </h2>
                </div>
                <p class="lead text-danger">10000/月</p>
                <p>台中市南屯區公益路二段51號</p>
                <p>這是一個特色房源的詳細描述，可以包含多行文字，例如：可養寵、可短租、家電齊全、交通便利等。</p>
                <a href="@Url.Action("Detail", "Property", new { id = 1 })" class="btn btn-outline-primary mt-3">
                    了解更多 <i class="fas fa-chevron-right"></i>
                </a>
            </div>
        </div>
    </section>

</main>

<button onclick="topFunction()" id="backToTopBtn" title="回到頂端">
    <i class="bi bi-arrow-up"></i> @* Changed icon to consistent with previous recommendation *@
</button>


@section Scripts {
    <script src="~/js/FrontPage.js" asp-append-version="true"></script>
}