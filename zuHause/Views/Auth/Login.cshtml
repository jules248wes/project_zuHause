@{
	Layout = "_AuthLayout";// 使用自訂的登入頁面佈局
    ViewData["Title"] = "後台登入";
}

<div class="container mt-5" style="max-width: 400px;">
    <div class="text-center mb-3">
        <img src="/images/logo.png" class="img-fluid" style="max-width: 250px;">
    </div>
    <h3 class="mb-4 text-center">🔐 後台登入</h3>

    @if (ViewBag.Error != null)
    {
        <div class="alert alert-danger">@ViewBag.Error</div>
    }

    <form method="post">
        <div class="mb-3">
            <label>帳號</label>
            <!-- TODO: 移除預設值 - 僅供開發測試使用 -->
            <input type="text" name="account" class="form-control" value="admin.master" required />
        </div>
        <div class="mb-3">
            <label>密碼</label>
            <!-- TODO: 移除預設值 - 僅供開發測試使用 -->
            <input type="password" name="password" class="form-control" value="admin001" required />
        </div>
        <button class="btn btn-primary w-100">登入</button>
        <!-- 新增提示說明 -->
        <p class="text-muted text-center mt-3" style="font-size: 0.9rem;">
            如需申請帳號，請連絡上級管理人員。
        </p>
    </form>
</div>
