@model List<zuHause.Models.FurnitureProduct>  

@{
    ViewBag.Title = "商品分類";
    Layout = "~/Views/Shared/_NavigationBar.cshtml";
    var categories = ViewBag.categories as List<zuHause.Models.FurnitureCategory>; // 左側分類
}

<div class="row">
    <!-- 左側分類清單 -->
    <div class="col-md-3">
        @Html.Partial("_FurnitureCategoryList", categories)
    </div>
    
    <div class="col-md-9">
        <h3 class="text-primary mb-4">@ViewBag.CategoryName</h3> <!-- 紅框：分類名稱 -->

        <div class="row">
            @foreach (var item in Model)
            {
                <div class="col-md-4 mb-4">
                    <div class="card h-100">
                        <img src="@item.ImageUrl" class="card-img-top" alt="@item.ProductName">
                        <div class="card-body">
                            <h5 class="card-title">@item.ProductName</h5>
                            <p class="card-text">@item.Description</p>
                            <a href="@Url.Action("ProductPurchasePage", "Furniture", new { id = item.FurnitureProductId })" class="btn btn-primary">查看商品</a>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
<div class="row">
    @foreach (var item in Model)
    {
        <div class="col-md-4 mb-4">
            <div class="card">
                <img src="@item.ImageUrl" class="card-img-top" alt="@item.ProductName">
                <div class="card-body">
                    <h5 class="card-title">@item.ProductName</h5>
                    <p class="card-text">@item.Description</p>
                    <a href="@Url.Action("ProductPurchasePage", "Furniture", new { id = item.FurnitureProductId })" class="btn btn-primary">查看商品</a>
                </div>
            </div>
        </div>
    }
</div>
