@model List<zuHause.Models.FurnitureProduct>

@{
    ViewBag.Title = "租屋首頁";
    Layout = "~/Views/Shared/_NavigationBar.cshtml";

    // 左側分類資料
    var categories = ViewBag.categories as List<zuHause.Models.FurnitureCategory>;

    // 輪播圖圖片路徑清單
    var carouselImages = ViewBag.carouselImages as List<string>;

    // 熱門商品清單
    var hotProducts = ViewBag.hotProducts as List<zuHause.Models.FurnitureProduct>;
}

<div class="row">
    <!-- 左側分類與租借須知 -->
    <div class="col-md-2">
        <h5>商品分類</h5>
        @Html.Partial("_FurnitureCategoryList", categories)
        <hr />
        <h6>租借須知</h6>
        <ul>
            <li>租期須滿三個月</li>
            <li>提前解約須補差額</li>
            <li>請妥善保管家具</li>
        </ul>
    </div>

    <!-- 主內容區 -->
    <div class="col-md-10">
        <!-- 輪播圖 -->
        <div id="carouselExample" class="carousel slide mb-4" data-bs-ride="carousel">
            <div class="carousel-inner">
                @for (int i = 0; i < carouselImages?.Count; i++)
                {
                    <div class="carousel-item @(i == 0 ? "active" : "")">
                        <img src="@carouselImages[i]" class="d-block w-100" style="height: 300px; object-fit: cover;" alt="輪播圖 @i" />
                    </div>
                }
            </div>
            <button class="carousel-control-prev" type="button" data-bs-target="#carouselExample" data-bs-slide="prev">
                <span class="carousel-control-prev-icon"></span>
            </button>
            <button class="carousel-control-next" type="button" data-bs-target="#carouselExample" data-bs-slide="next">
                <span class="carousel-control-next-icon"></span>
            </button>
        </div>

        <!-- 熱門商品區 -->
        <h5>熱門商品</h5>
        <div class="row">
            @if (hotProducts != null && hotProducts.Any())
            {
                foreach (var product in hotProducts)
                {
                    <div class="col-md-4 mb-4">
                        <div class="card">
                            <img src="@product.ImageUrl" class="card-img-top" alt="@product.ProductName">
                            <div class="card-body">
                                <h5 class="card-title">@product.ProductName</h5>
                                <p class="card-text text-danger">NT$@product.ListPrice</p>
                                <a href="@Url.Action("ProductPurchasePage", "Furniture", new { id = product.FurnitureProductId })"
                                   class="btn btn-primary w-100">查看商品</a>
                            </div>
                        </div>
                    </div>
                }
            }
            else
            {
                <p>目前沒有熱門商品。</p>
            }
        </div>
    </div>
</div>
