@{
    Layout = "~/Views/Shared/_NavigationBar.cshtml";
    var categories = ViewBag.categories as List<zuHause.ViewModels.FurnitureCategories>;
    var carouselImages = ViewBag.carouselImages as List<string>;
    var hotProducts = ViewBag.hotProducts as List<Dictionary<string, string>>;
}

<div class="row">
    <!-- 左側分類 -->
    <div class="col-md-2">
        <h5>商品分類</h5>
        <ul class="list-group">
            @foreach (var cat in categories)
            {
                <li class="list-group-item">
                    <a href="@Url.Action("ClassificationItems", "Furniture", new { categoryId = cat.categoryId })">
                        @cat.categoryName
                    </a>
                </li>
            }
        </ul>
        <hr />
        <h6>租借須知</h6>
        <ul>
            <li>XXXXXXXX</li>
            <li>XXXXXXXX</li>
            <li>XXXXXXXX</li>
        </ul>
    </div>

    <!-- 中央內容 -->
    <div class="col-md-10">
        <!-- 輪播圖 -->
        <div id="carouselExample" class="carousel slide mb-4" data-bs-ride="carousel">
            <div class="carousel-inner">
                @for (int i = 0; i < carouselImages.Count; i++)
                {
                    <div class="carousel-item @(i == 0 ? "active" : "")">
                        <img src="@carouselImages[i]" class="d-block w-100" style="height: 300px; object-fit: cover;" />
                    </div>
                }
            </div>
            <button class="carousel-control-prev" type="button" data-bs-target="#carouselExample" data-bs-slide="prev">
                <span class="carousel-control-prev-icon"></span>
            </button>
            <button class="carousel-control-next" type="button" data-bs-target="#carouselExample" data-bs-slide="next">
                <span class="carousel-control-next-icon"></span>
            </button>
        </div>

        <!-- 熱門商品 -->
        <h5>熱門商品</h5>
        <div class="row">
            @foreach (var item in hotProducts)
            {
                <div class="col-md-4 mb-4">
                    <div class="card h-100 shadow-sm">
                        @if (!string.IsNullOrEmpty(item["Tag"]))
                        {
                            <span class="badge bg-danger position-absolute m-2">@item["Tag"]</span>
                        }
                        <img src="@item["ImageUrl"]" class="card-img-top" style="height: 200px; object-fit: contain;" />
                        <div class="card-body">
                            <h6 class="card-title">@item["ProductName"]</h6>
                            <p class="text-muted">租金: NT$xxx</p>
                            <a href="#" class="btn btn-primary w-100">加入租借清單</a>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>
