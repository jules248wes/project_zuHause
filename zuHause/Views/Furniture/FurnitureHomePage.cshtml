@model List<zuHause.Models.FurnitureProduct>

@{
    ViewBag.Title = "租屋首頁";
    Layout = "~/Views/Shared/_NavigationBar.cshtml"; // 確保這裡指向您的主佈局文件

    // 左側分類資料
    var categories = ViewBag.categories as List<zuHause.Models.FurnitureCategory>;

    // 輪播圖圖片路徑清單
    var carouselImages = ViewBag.CarouselImages as List<zuHause.Models.CarouselImage>;

    // 熱門商品清單
    var hotProducts = ViewBag.hotProducts as List<zuHause.Models.FurnitureProduct>;
}

<div class="row">
    <div class="col-md-2">
        <h5>商品分類</h5>
        @Html.Partial("_FurnitureCategoryList", categories)
        <hr />
        <h6>租借須知</h6>
        <ul>
            <li>租期須滿三個月</li>
            <li>提前解約須補差額</li>
            <li>請妥善保管家具</li>
        </ul>
    </div>

    @* 輪播圖 *@
    <div class="col-md-10">
        @if (carouselImages != null && carouselImages.Any())
        {
            <div id="furnitureCarousel" class="carousel slide mb-4" data-bs-ride="carousel">
                <div class="carousel-inner">
                    @for (int i = 0; i < carouselImages.Count; i++)
                    {
                        <div class="carousel-item @(i == 0 ? "active" : "")">
                            <img src="@carouselImages[i].ImageUrl" class="d-block w-100" style="height: 300px; object-fit: cover;" alt="@carouselImages[i].ImagesName">
                            <div class="carousel-caption d-none d-md-block">
                                <h5>@carouselImages[i].ImagesName</h5>
                            </div>
                        </div>
                    }
                </div>
                <button class="carousel-control-prev" type="button" data-bs-target="#furnitureCarousel" data-bs-slide="prev">
                    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                    <span class="visually-hidden">Previous</span>
                </button>
                <button class="carousel-control-next" type="button" data-bs-target="#furnitureCarousel" data-bs-slide="next">
                    <span class="carousel-control-next-icon" aria-hidden="true"></span>
                    <span class="visually-hidden">Next</span>
                </button>
            </div>
        }



        <h5>熱門商品</h5>
        <div class="row">
            @if (hotProducts != null && hotProducts.Any())
            {
                <div class="row row-cols-1 row-cols-md-3 row-cols-lg-4 g-3">
                    @foreach (var product in hotProducts)
                    {
                        <div class="col">
                            <a href="@Url.Action("ProductPurchasePage", "Furniture", new { id = product.FurnitureProductId })" class="card-link-wrapper text-decoration-none text-dark">
                                <div class="card h-100 shadow-sm">
                                    <img src="@product.ImageUrl" class="card-img-top w-100" alt="@product.ProductName" style="height: auto; max-height: 250px; object-fit: contain;">

                                    <div class="card-body d-flex flex-column justify-content-between">
                                        <h6 class="card-title text-center">@product.ProductName</h6>

                                        <div class="text-center mt-2">
                                            <p class="text-danger mb-1">租金: NT$@product.DailyRental/天</p>
                                            <p class="text-muted small mb-2">原價: NT$@product.ListPrice</p>
                                            <a href="@Url.Action("ProductPurchasePage", "Furniture", new { id = product.FurnitureProductId })" class="btn btn-success btn-sm w-100 mt-auto">
                                                查看商品詳情
                                            </a>
                                        </div>
                                    </div>
                                </div>
                            </a>
                        </div>
                    }
                </div>
            }
            else
            {
                <p>目前沒有熱門商品。</p>
            }
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // 移除原有的 AJAX 加入購物車腳本
    </script>
}