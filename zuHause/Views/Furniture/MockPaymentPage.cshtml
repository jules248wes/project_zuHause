@* /Furniture/mockpaymentpage *@

@{
    ViewData["Title"] = "付款頁面 - 家具租借";
    Layout = "~/Views/Shared/_NavigationBar.cshtml";
    var FurnitureCartId = ViewBag.FurnitureCartId as string ?? "";
}

<div class="container mt-5">
    <div class="card p-4">
        <h2 class="text-center mb-4">💳 模擬付款頁面</h2>

        <p class="text-center text-muted">請選擇是否完成付款：</p>

        <div class="d-flex justify-content-center gap-3">
            <!-- 確定付款按鈕 -->
            <form method="post" action="/Furniture/ConfirmPayment">
                <input type="hidden" name="selectedPropertyId" value="@ViewBag.SelectedPropertyId" />
                <button type="submit" class="btn btn-success">✅ 確定付款</button>
            </form>

            <!-- 取消付款按鈕 -->
            <form method="post" action="/Furniture/CancelPayment">
                <input type="hidden" name="selectedPropertyId" value="@ViewBag.SelectedPropertyId" />
                <button type="submit" class="btn btn-outline-danger">❌ 取消付款</button>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        document.getElementById("payNowBtn").addEventListener("click", async function () {
            const btn = this;
            btn.disabled = true;
            btn.innerText = "處理中...";

            const cartId = "@FurnitureCartId";

            const response = await fetch("/Furniture/ConfirmPayment?cartId=" + cartId, {
                method: "POST"
            });

            if (response.redirected) {
                // 顯示提示與倒數後轉導
                const container = document.querySelector(".card");
                container.innerHTML = `
                    <h3 class="text-center text-success">✅ 簽署成功，付款完成</h3>
                    <p class="text-center">即將為您跳轉至付款完成頁面...</p>
                    <p class="text-center text-muted" id="countdown">3 秒後跳轉</p>
                `;
                let countdown = 3;
                const interval = setInterval(() => {
                    countdown--;
                    document.getElementById("countdown").innerText = countdown + " 秒後跳轉";
                    if (countdown === 0) {
                        clearInterval(interval);
                        window.location.href = response.url;
                    }
                }, 1000);
            } else {
                alert("付款失敗，請稍後再試");
                btn.disabled = false;
                btn.innerText = "✅ 確定付款";
            }
        });
    </script>
}
