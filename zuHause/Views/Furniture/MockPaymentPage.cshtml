@{
    ViewData["Title"] = "付款頁面 - 家具租借";
    var cartId = ViewBag.CartId as string ?? ""; // 假設你從 Controller 傳入 ViewBag.CartId
}

<div class="container mt-5">
    <div class="card p-4">
        <h2 class="text-center mb-4">💳 模擬付款頁面</h2>

        <p class="text-center text-muted">請選擇是否完成付款：</p>

        <div class="d-flex justify-content-center gap-3">
            <!-- 確定付款按鈕 -->
            <form asp-action="ConfirmPayment" asp-controller="Furniture" method="post">
                <input type="hidden" name="cartId" value="@cartId" />
                <button type="submit" class="btn btn-success">✅ 確定付款</button>
            </form>

            <!-- 取消付款按鈕 -->
            <form asp-action="CancelPayment" asp-controller="Furniture" method="get">
                <input type="hidden" name="cartId" value="@cartId" />
                <button type="submit" class="btn btn-outline-danger">❌ 取消付款</button>
            </form>
        </div>
    </div>
</div>
