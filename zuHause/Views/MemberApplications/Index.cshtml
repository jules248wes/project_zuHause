@{
    ViewData["activePage"] = "MemberApplications";
}

<div class="row w-100 gx-5 justify-content-center position-relative h-100">
    @await Html.PartialAsync("_PartialMemberSideBar")
    <div class="col-10 d-flex justify-content-start flex-column
        align-items-center">
        <div class="row w-100">
            <h1 class="fs-3 text-white px-0">申請紀錄管理</h1>
            <div class="col-12 mt-3 px-0">
                <ul class="nav nav-tabs" id="ApplicationType" role="tablist">
                    <li class="nav-item" role="presentation">
                        <button class="nav-link text-black active" id="allItemTab" data-bs-toggle="tab"
                                data-bs-target="#allItemTab-pane" type="button" role="tab" aria-controls="allItemTab-pane"
                                aria-selected="true">
                            全部
                        </button>
                    </li>
                    <li class="nav-item" role="presentation">
                        <button class="nav-link text-black" id="applyHouseViewing" data-bs-toggle="tab"
                                data-bs-target="#applyHouseViewing-pane" type="button" role="tab"
                                aria-controls="applyHouseViewing-pane" aria-selected="false">
                            申請看房
                        </button>
                    </li>
                    <li class="nav-item" role="presentation">
                        <button class="nav-link text-black" id="applyRental" data-bs-toggle="tab"
                                data-bs-target="#applyRental-pane" type="button" role="tab" aria-controls="applyRental-pane"
                                aria-selected="false">
                            申請租賃
                        </button>
                    </li>
                </ul>
                <div class="tab-content" id="ApplicationTypeContent">
                    <div class="tab-pane fade show active py-3" id="allItemTab-pane" role="tabpanel"
                         aria-labelledby="allItemTab" tabindex="0">
                        <div class="row w-100 mx-0 mb-3 align-items-center justify-content-end">
                            <div class="col-auto px-0">
                                <select class="form-select" aria-label="Default select example">
                                    <option selected>申請狀態</option>
                                    <option value="1">合約已完成</option>
                                    <option value="2">Two</option>
                                    <option value="3">Three</option>
                                </select>
                            </div>
                        </div>
                        <div class="row w-100 mx-0 gy-3">
                            @await Component.InvokeAsync("MemberApplicationCard")
                        </div>

                    </div>
                    <div class="tab-pane fade" id="applyHouseViewing-pane" role="tabpanel"
                         aria-labelledby="applyHouseViewing" tabindex="0">
                        ...
                    </div>
                    <div class="tab-pane fade" id="applyRental-pane" role="tabpanel" aria-labelledby="applyRental"
                         tabindex="0">
                        ...
                    </div>
                </div>
            </div>
        </div>
    </div>




</div>

@section Scripts {
    <script src="~/js/changeMemberContractCard.js"></script>
}