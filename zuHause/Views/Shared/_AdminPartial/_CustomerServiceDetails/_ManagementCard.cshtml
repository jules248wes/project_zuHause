@{
    var managementData = new {
        HandledBy = "Admin_User_01"
    };
}

<!-- 案件管理卡片 -->
<div class="card">
    <div class="card-header">
        案件管理
    </div>
    <div class="card-body">
        <div class="mb-3">
            <label class="form-label">處理人員</label>
            <input type="text" class="form-control" value="@managementData.HandledBy" readonly>
        </div>
        <div class="mb-3">
            <label for="statusChange" class="form-label">變更狀態</label>
            <select class="form-select" id="statusChange">
                <option value="">選擇新狀態...</option>
                <option value="pending">待處理</option>
                <option value="in_progress">處理中</option>
                <option value="replied">已回覆</option>
            </select>
        </div>
    </div>
</div>