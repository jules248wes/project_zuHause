<!-- Double Check 確認Modal -->
<div class="modal fade" id="doubleCheckModal" tabindex="-1" aria-labelledby="doubleCheckModalLabel" aria-hidden="true" data-bs-backdrop="static" data-bs-keyboard="false">
    <div class="modal-dialog modal-sm">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="doubleCheckModalLabel">
                    <i class="fas fa-exclamation-triangle text-warning"></i> 確認操作
                </h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body text-center">
                <p id="doubleCheckMessage" class="mb-3">確定要執行此操作嗎？</p>
                <div class="alert alert-warning" role="alert">
                    <small><i class="fas fa-info-circle"></i> 此操作執行後無法復原，請謹慎確認</small>
                </div>
            </div>
            <div class="modal-footer justify-content-center">
                <button type="button" class="btn btn-outline-secondary" data-bs-dismiss="modal">
                    <i class="fas fa-times"></i> 取消
                </button>
                <button type="button" class="btn btn-primary" id="finalConfirmBtn">
                    <i class="fas fa-check"></i> 確定執行
                </button>
            </div>
        </div>
    </div>
</div>