<div class="card mt-3">
    <div class="card-header d-flex justify-content-between align-items-center">
        <h5 class="card-title mb-0">系統訊息篩選</h5>
        <button type="button" class="btn btn-outline-info btn-sm" id="advancedSearchBtn">
            <i class="bi bi-chevron-down"></i> 進階篩選
        </button>
    </div>
    <div class="card-body">
        <form>
            <!-- 基本搜尋列 -->
            <div class="row g-3 mb-3">
                <div class="col-md-6">
                    <label for="searchInput" class="form-label">關鍵字搜尋</label>
                    <div class="input-group">
                        <input type="text" class="form-control" placeholder="搜尋關鍵字..." id="searchInput">
                        <select class="form-select" id="searchField" style="max-width: 150px;">
                            <option value="title">訊息標題</option>
                            <option value="content">訊息內容</option>
                            <option value="messageID">訊息ID</option>
                            <option value="adminName">發送者</option>
                        </select>
                    </div>
                </div>
                
                <div class="col-md-2">
                    <label for="audienceFilter" class="form-label">發送對象</label>
                    <select class="form-select" id="audienceFilter">
                        <option value="">全部</option>
                        <option value="ALL_MEMBERS">全體會員</option>
                        <option value="ALL_LANDLORDS">全體房東</option>
                        <option value="INDIVIDUAL">個別用戶</option>
                    </select>
                </div>
                
                <div class="col-md-2">
                    <label for="categoryFilter" class="form-label">訊息分類</label>
                    <select class="form-select" id="categoryFilter">
                        <option value="">全部</option>
                        <option value="ANNOUNCEMENT">一般公告</option>
                        <option value="UPDATE">功能更新</option>
                        <option value="SECURITY">安全提醒</option>
                        <option value="MAINTENANCE">系統維護</option>
                        <option value="POLICY">政策更新</option>
                        <option value="ORDER">訂單通知</option>
                        <option value="PROPERTY">房源通知</option>
                        <option value="ACCOUNT">帳戶通知</option>
                    </select>
                </div>
                
                <div class="col-md-2">
                    <label class="form-label d-block">&nbsp;</label>
                    <button type="button" class="btn btn-primary me-2" id="searchBtn">
                        <i class="bi bi-search"></i> 搜尋
                    </button>
                    <button type="button" class="btn btn-outline-secondary" id="resetBtn">
                        <i class="bi bi-arrow-clockwise"></i> 重置
                    </button>
                </div>
            </div>
            
            <!-- 進階搜尋摺疊區域 -->
            <div class="collapse" id="advancedSearchCollapse">
                <div class="border-top pt-3">
                    <div class="row g-3">
                        <div class="col-md-4">
                            <label class="form-label">發送日期範圍</label>
                            <div class="input-group">
                                <input type="date" class="form-control" id="startDate" placeholder="開始日期">
                                <span class="input-group-text">至</span>
                                <input type="date" class="form-control" id="endDate" placeholder="結束日期">
                            </div>
                        </div>
                        
                        <div class="col-md-3">
                            <label for="adminFilter" class="form-label">發送者</label>
                            <select class="form-select" id="adminFilter">
                                <option value="">全部</option>
                                <option value="Admin_Steve">Admin_Steve</option>
                                <option value="Admin_Marketing">Admin_Marketing</option>
                                <option value="SYSTEM">SYSTEM</option>
                            </select>
                        </div>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>