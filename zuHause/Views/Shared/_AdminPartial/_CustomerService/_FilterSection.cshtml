<!-- 篩選與搜尋區 -->
<div class="card mt-3">
	<div class="card-header d-flex justify-content-between align-items-center">
		<h5 class="card-title mb-0">客服案件篩選</h5>
		<button type="button" class="btn btn-outline-info btn-sm" id="advancedSearchBtn">
			<i class="bi bi-chevron-down"></i> 進階篩選
		</button>
	</div>
	<div class="card-body">
		<form>
			<!-- 基本搜尋列 -->
			<div class="row g-3 mb-3">
				<div class="col-md-6">
					<label for="searchInput" class="form-label">關鍵字搜尋</label>
					<div class="input-group">
						<input type="text" class="form-control" placeholder="搜尋關鍵字..." id="searchInput">
						<select class="form-select" id="searchField" style="max-width: 150px;">
							<option value="ticketId">客服單號</option>
							<option value="memberName">會員姓名</option>
							<option value="memberId">會員ID</option>
						</select>
					</div>
				</div>
				<div class="col-md-3">
					<label for="statusFilter" class="form-label">案件狀態</label>
					<select class="form-select" id="statusFilter">
						<option value="">全部</option>
						<option value="pending">待處理</option>
						<option value="in_progress">處理中</option>
						<option value="resolved">已回覆</option>
					</select>
				</div>
				<div class="col-md-3">
					<label class="form-label d-block">&nbsp;</label>
					<button type="button" class="btn btn-primary me-2" id="searchBtn">
						<i class="bi bi-search"></i> 搜尋
					</button>
					<button type="button" class="btn btn-outline-secondary" id="resetBtn">
						<i class="bi bi-arrow-clockwise"></i> 重置
					</button>
				</div>
			</div>

			<!-- 第二行：來源與類別 -->
			<div class="row g-3 mb-3">
				<div class="col-md-4">
					<label for="sourceFilter" class="form-label">來源</label>
					<select class="form-select" id="sourceFilter">
						<option value="">全部來源</option>
						<option value="contract">已成立租約</option>
						<option value="property">上架審核不通過</option>
						<option value="furniture">已成立傢俱訂單</option>
					</select>
				</div>
				<div class="col-md-4">
					<label for="categoryFilter" class="form-label">案件類別</label>
					<select class="form-select" id="categoryFilter">
						<option value="">全部類別</option>
						<option value="account">帳戶問題</option>
						<option value="payment">付款問題</option>
						<option value="contract">合約問題</option>
						<option value="property">房源問題</option>
						<option value="furniture">傢俱問題</option>
						<option value="other">其他</option>
					</select>
				</div>
			</div>

			<!-- 進階搜尋摺疊區域 -->
			<div class="collapse" id="advancedSearchCollapse">
				<div class="border-top pt-3">
					<div class="row g-3 mt-2">
						<div class="col-md-4">
							<label class="form-label">建立日期範圍</label>
							<div class="input-group">
								<input type="date" class="form-control" id="createDateStart" placeholder="開始日期">
								<span class="input-group-text">至</span>
								<input type="date" class="form-control" id="createDateEnd" placeholder="結束日期">
							</div>
						</div>
						<div class="col-md-4">
							<label class="form-label">最後更新範圍</label>
							<div class="input-group">
								<input type="date" class="form-control" id="updateDateStart" placeholder="開始日期">
								<span class="input-group-text">至</span>
								<input type="date" class="form-control" id="updateDateEnd" placeholder="結束日期">
							</div>
						</div>
						<div class="col-md-4">
							<label for="handlerFilter" class="form-label">處理人員</label>
							<select class="form-select" id="handlerFilter">
								<option value="">全部人員</option>
								<option value="admin1">張管理員</option>
								<option value="admin2">林管理員</option>
								<option value="admin3">王管理員</option>
							</select>
						</div>

					</div>
				</div>
			</div>
		</form>
	</div>
</div>