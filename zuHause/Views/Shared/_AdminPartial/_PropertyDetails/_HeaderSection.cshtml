@{
    dynamic propertyData = ViewData["PropertyData"];
}

<!-- 頂部標題區 & 快速操作區 -->
<div class="card mb-4">
    <div class="card-body">
        <div class="d-flex justify-content-between align-items-center flex-wrap">
            <div>
                <h2 class="mb-1">
                    <i class="bi bi-house-door me-2"></i>@propertyData.Title
                </h2>
                <p class="text-muted mb-1">屋源ID: @propertyData.PropertyId</p>
                <div class="d-flex align-items-center mb-2">
                    <p class="text-muted mb-0 me-2">房東: @propertyData.LandlordName (ID: @propertyData.LandlordId)</p>
                    <a href="#" class="btn btn-outline-secondary btn-sm">
                        <i class="bi bi-person-circle me-1"></i>查看房東詳情
                    </a>
                </div>
                <div>
                    @if (propertyData.ApprovalStatus == "待審核")
                    {
                        <span class="badge fs-6 text-bg-warning">@propertyData.ApprovalStatus</span>
                    }
                    else if (propertyData.ApprovalStatus == "審核通過")
                    {
                        <span class="badge fs-6 text-bg-success">@propertyData.ApprovalStatus</span>
                    }
                    else if (propertyData.ApprovalStatus == "審核失敗")
                    {
                        <span class="badge fs-6 text-bg-danger">@propertyData.ApprovalStatus</span>
                    }
                    else
                    {
                        <span class="badge fs-6 text-bg-dark">@propertyData.ApprovalStatus</span>
                    }

                    @if (propertyData.ListingStatus == "已上架")
                    {
                        <span class="badge fs-6 text-bg-primary">@propertyData.ListingStatus</span>
                    }
                    else if (propertyData.ListingStatus == "未上架")
                    {
                        <span class="badge fs-6 text-bg-secondary">@propertyData.ListingStatus</span>
                    }
                    else
                    {
                        <span class="badge fs-6 text-bg-warning">@propertyData.ListingStatus</span>
                    }
                </div>
            </div>
            <div class="text-end mt-2 mt-md-0">
                <div>
                    @if (propertyData.IsActive)
                    {
                        <button class="btn btn-outline-danger" onclick="openForceRemoveModal()">
                            <i class="bi bi-trash me-1"></i>強制下架
                        </button>
                    }
                    <button class="btn btn-outline-primary">
                        <i class="bi bi-pencil-square me-1"></i>編輯屋源
                    </button>
                    <a href="#" class="btn btn-outline-info" target="_blank">
                        <i class="bi bi-arrows-angle-expand me-1"></i>查看前台頁面
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>