<!DOCTYPE html>
<html lang="en">
<head>
	<meta charset="utf-8" />
	<meta name="viewport" content="width=device-width, initial-scale=1.0" />
	<title>@ViewData["Title"] - zuhause</title>
	<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
	<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
	<link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
	 <link rel="stylesheet" href="~/zuHause.styles.css" asp-append-version="true" /> 
	@RenderSection("Styles", required: false)
	<style>
		
		.social-icons .bi {
			font-size: 1.5rem; /* 調整圖示大小 */
			color: #000000; /* 圖示顏色 */
			margin-right: 10px; /* 圖示之間的間距 */
			transition: color 0.3s; /* 添加過渡效果 */
		}

		/* 確保服務條款、免責聲明、隱私權說明等連結的顏色 */
		.list-inline-item a.text-black {
			transition: color 0.3s ease-in-out; /* 添加平滑的過渡效果 */
		}

			/* 滑鼠懸停時的顏色 */
			.list-inline-item a.text-black:hover,
			.social-icons .bi:hover {
				color: #258cfb !important; /* 使用您想要的藍色，!important 可以確保覆蓋 Bootstrap 的預設 hover 顏色 */
			}
	</style>
</head>
<body class="position-relative">
	@await Component.InvokeAsync("NavbarMember")
	<div>
		<main role="main">
			@RenderBody()
		</main>
	</div>
	<footer style="background: linear-gradient(90deg, rgba(13, 64, 84, 1) 0%, rgba(39, 153, 171, 1) 60%, rgba(172, 205, 210, 1) 100%); color: #1c1e22; padding: 30px 0;">
		<div class="container d-flex justify-content-between align-items-center flex-wrap">

        <div class="d-flex align-items-center">
            <img src="~/images/logo.png" alt="zuHause Logo" style="height: 100px; margin-right: 20px;">
            <div>
                <div style="color: white;">熊好租股份有限公司</div>
                <div style="color: white;">台中市南屯區公益路二段51號</div>
            </div>
        </div>

			<div class="text-end mt-3 mt-md-0">
				<ul class="list-inline">
					<li class="list-inline-item">
						<a asp-controller="Announcement" asp-action="Announcement" asp-route-section="announcements" class="text-black text-decoration-none">最新公告</a>
					</li>
					<li class="list-inline-item">
							<a asp-controller="Announcement" asp-action="Announcement" asp-route-section="terms" class="text-black text-decoration-none">服務條款</a>
					</li>
					<li class="list-inline-item">
							<a asp-controller="Announcement" asp-action="Announcement" asp-route-section="disclaimer" class="text-black text-decoration-none">免責聲明</a>
					</li>
					<li class="list-inline-item">
							<a asp-controller="Announcement" asp-action="Announcement" asp-route-section="privacy" class="text-black text-decoration-none">隱私權說明</a>
					</li>
				</ul>
				<div class="social-icons mb-3">
						<a href="#" class="text-black mx-2"><i class="bi bi-facebook bi-lg"></i></a>
						<a href="#" class="text-black mx-2"><i class="bi bi-twitter bi-lg"></i></a>
						<a href="#" class="text-black mx-2"><i class="bi bi-youtube bi-lg"></i></a>
						<a href="#" class="text-black mx-2"><i class="bi bi-envelope bi-lg"></i></a>
						<a href="#" class="text-black mx-2"><i class="bi bi-instagram bi-lg"></i></a>
				</div>
					<p class="text-black text-decoration-none">Copyright © @DateTime.Now.Year 熊好租. All rights reserved.</p>
			</div>
		</div>
	</footer>

	@* ... body content ... *@
	<script src="~/lib/jquery/dist/jquery.min.js"></script>
	<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
	<script src="~/js/site.js" asp-append-version="true"></script>
	

	@await RenderSectionAsync("Scripts", required: false)

</body>
</html>
