@* @using zuHause.ViewModels.MemberViewModel
@model ContractsViewModel *@


<button type="button" class="btn btn-aqua py-0 col-auto w-100" data-bs-toggle="modal"
        data-bs-target="#tenantSignContract">
    (房客)簽署合約
</button>

<div class="modal fade" id="tenantSignContract" data-bs-backdrop="static"
     data-bs-keyboard="false" tabindex="-1"
     aria-labelledby="tenantSignContractLabel" aria-hidden="true">
