}

<!DOCTYPE html>
<html lang="zh-Hant">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewBag.Title - 後台儀表板</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.7/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/dashboard.css" />
</head>
<body>
    <!-- 🔽 這裡是你要加的部分 -->
    <nav class="navbar navbar-light bg-white border-bottom px-4 py-2 d-flex justify-content-between align-items-center">
        
        <div>
            歡迎 @ViewBag.UserName｜ID:@ViewBag.UserId 權限：@ViewBag.UserRole
            <a class="btn btn-outline-secondary btn-sm ms-3" href="/Account/Logout">登出</a>
        </div>
    </nav>
    <!-- 🔽 插入這段頁籤列 -->
    <div class="tab-bar bg-white border-bottom px-4 py-2 d-flex align-items-center gap-2 overflow-auto">
        <!-- 頁籤項目（用 JS 動態插入） -->
    </div>
    <div class="container-fluid">
        <div class="row">
            <!-- 左邊側邊欄 -->
            <div class="col-md-2 sidebar bg-light pt-3">
                <h5 class="text-center">功能選單</h5>
                @Html.Partial("_SidebarMenu")
            </div>

            <!-- 右側主內容 -->
            <div class="col-md-10 p-4">
                @RenderBody()
            </div>
        </div>
    </div>

    <!-- JS 放在 body 結尾 -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.7/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script src="~/js/dashboard.js" asp-append-version="true"></script>

    @RenderSection("Scripts", required: false)

</body>
</html>
