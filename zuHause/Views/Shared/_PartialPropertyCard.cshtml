@using zuHause.ViewModels.MemberViewModel
@model ContractsViewModel

<a href="#">
<div class="card col p-0">
    <div class="row g-0 d-flex align-items-center">
        <div class="col-4 h-100">
            <img src="~/images/apartment.jpg" class="img-fluid rounded-start object-fit-cover h-100"
                 alt="...">
        </div>
        <div class="col-8">
            <div class="card-body d-flex flex-column gap-1">
                    <h5 class="card-title my-0">@Model.Title</h5>
                    <h6 class="my-0">房源編號：@Model.PropertyId</h6>
                <h6 class="my-0"></h6>
                    <h6 class="my-0">租金：NT$@Model.MonthlyRent.ToString("N0") 元 / 月</h6>
                <h6 class="card-text text-end">
                        <small class="text-body-secondary">上架日期：@Model.PublishedAtText</small>
                </h6>
            </div>
        </div>
    </div>
</div>
</a>