@{
    ViewData["Title"] = "房源創建成功";
    Layout = "_LoginLayout"; // 使用統一的佈局以顯示導航列和成功訊息
}

<div class="container-fluid">
    <div class="row justify-content-center">
        <div class="col-lg-8 col-xl-6">
            <div class="text-center mb-4">
                <!-- 成功圖示 -->
                <div class="success-icon mb-4">
                    <i class="fas fa-check-circle text-success" style="font-size: 4rem;"></i>
                </div>
                
                <!-- 主標題 -->
                <h1 class="h2 fw-bold text-success mb-3">房源提交成功！</h1>
                <p class="lead text-muted">您的房源已成功提交，正在進入審核流程</p>
            </div>

            <!-- 審核流程說明卡片 -->
            <div class="card shadow-sm mb-4">
                <div class="card-header bg-light">
                    <h3 class="card-title h5 mb-0">
                        <i class="fas fa-clipboard-list me-2 text-primary"></i>
                        審核流程說明
                    </h3>
                </div>
                <div class="card-body">
                    <div class="review-process">
                        <!-- 審核步驟 -->
                        <div class="row g-4">
                            <div class="col-md-4">
                                <div class="review-step">
                                    <div class="step-number bg-primary text-white rounded-circle d-flex align-items-center justify-content-center mx-auto mb-3" style="width: 50px; height: 50px;">
                                        <span class="fw-bold">1</span>
                                    </div>
                                    <h5 class="h6 text-center">資料審核</h5>
                                    <p class="text-muted text-center small">檢查房源基本資訊、照片及相關文件</p>
                                    <div class="text-center">
                                        <span class="badge bg-light text-dark">1-2 個工作天</span>
                                    </div>
                                </div>
                            </div>
                            
                            <div class="col-md-4">
                                <div class="review-step">
                                    <div class="step-number bg-warning text-white rounded-circle d-flex align-items-center justify-content-center mx-auto mb-3" style="width: 50px; height: 50px;">
                                        <span class="fw-bold">2</span>
                                    </div>
                                    <h5 class="h6 text-center">合規審查</h5>
                                    <p class="text-muted text-center small">確認房源符合平台規範及法律要求</p>
                                    <div class="text-center">
                                        <span class="badge bg-light text-dark">1 個工作天</span>
                                    </div>
                                </div>
                            </div>
                            
                            <div class="col-md-4">
                                <div class="review-step">
                                    <div class="step-number bg-success text-white rounded-circle d-flex align-items-center justify-content-center mx-auto mb-3" style="width: 50px; height: 50px;">
                                        <span class="fw-bold">3</span>
                                    </div>
                                    <h5 class="h6 text-center">正式上架</h5>
                                    <p class="text-muted text-center small">審核通過後房源將正式上線供租客瀏覽</p>
                                    <div class="text-center">
                                        <span class="badge bg-success">即時生效</span>
                                    </div>
                                </div>
                            </div>
                        </div>
                        
                        <!-- 預計時間 -->
                        <div class="alert alert-info mt-4">
                            <div class="d-flex align-items-center">
                                <i class="fas fa-clock me-2"></i>
                                <div>
                                    <strong>預計審核時間：2-3 個工作天</strong>
                                    <br>
                                    <small>審核期間如有疑問，我們將透過電子郵件與您聯繫</small>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- 重要提醒 -->
            <div class="card shadow-sm mb-4">
                <div class="card-header bg-warning bg-opacity-10">
                    <h3 class="card-title h5 mb-0">
                        <i class="fas fa-exclamation-triangle me-2 text-warning"></i>
                        重要提醒
                    </h3>
                </div>
                <div class="card-body">
                    <div class="row g-3">
                        <div class="col-12">
                            <div class="d-flex">
                                <div class="flex-shrink-0">
                                    <i class="fas fa-envelope text-primary me-2"></i>
                                </div>
                                <div>
                                    <strong>保持聯繫管道暢通</strong>
                                    <p class="text-muted mb-0">請確保您的電子郵件和手機號碼可正常接收訊息，以便我們在審核過程中與您聯繫。</p>
                                </div>
                            </div>
                        </div>
                        <div class="col-12">
                            <div class="d-flex">
                                <div class="flex-shrink-0">
                                    <i class="fas fa-edit text-primary me-2"></i>
                                </div>
                                <div>
                                    <strong>補充資料要求</strong>
                                    <p class="text-muted mb-0">如審核過程中需要補充資料，我們會透過電子郵件通知您，請務必在 3 個工作天內提供。</p>
                                </div>
                            </div>
                        </div>
                        <div class="col-12">
                            <div class="d-flex">
                                <div class="flex-shrink-0">
                                    <i class="fas fa-ban text-danger me-2"></i>
                                </div>
                                <div>
                                    <strong>審核未通過處理</strong>
                                    <p class="text-muted mb-0">若房源審核未通過，我們會說明原因並提供修改建議，您可重新提交審核。</p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- 操作按鈕 -->
            <div class="text-center">
                <div class="row g-3">
                    <div class="col-md-4">
                        <a href="@Url.Action("Index", "Home")" class="btn btn-outline-secondary w-100">
                            <i class="fas fa-home me-2"></i>
                            返回首頁
                        </a>
                    </div>
                    <div class="col-md-4">
                        <a href="@Url.Action("Create", "Property")" class="btn btn-outline-primary w-100">
                            <i class="fas fa-plus me-2"></i>
                            繼續刊登房源
                        </a>
                    </div>
                    <div class="col-md-4">
                        <!-- 這裡未來可以連接到房東後台/我的房源頁面 -->
                        <a href="#" class="btn btn-primary w-100" onclick="alert('功能開發中，敬請期待！'); return false;">
                            <i class="fas fa-list me-2"></i>
                            查看我的房源
                        </a>
                    </div>
                </div>
            </div>

            <!-- 額外資訊 -->
            <div class="text-center mt-5 pt-4 border-top">
                <p class="text-muted small">
                    如有任何疑問，請聯繫客服：
                    <a href="mailto:support@zuhause.com" class="text-decoration-none">support@zuhause.com</a> 
                    或電話：
                    <a href="tel:0800-123-456" class="text-decoration-none">0800-123-456</a>
                </p>
            </div>
        </div>
    </div>
</div>

<style>
    .success-icon i {
        animation: successPulse 2s ease-in-out infinite;
    }
    
    @@keyframes successPulse {
        0% {
            transform: scale(1);
        }
        50% {
            transform: scale(1.1);
        }
        100% {
            transform: scale(1);
        }
    }
    
    .review-step {
        text-align: center;
    }
    
    .step-number {
        font-size: 1.2rem;
        margin-bottom: 1rem;
    }
    
    .card {
        border: none;
        border-radius: 0.75rem;
    }
    
    .card-header {
        border-radius: 0.75rem 0.75rem 0 0 !important;
        border-bottom: 1px solid rgba(0,0,0,.125);
    }
    
    .btn {
        border-radius: 0.5rem;
        padding: 0.75rem 1.5rem;
        font-weight: 500;
    }
    
    .alert {
        border-radius: 0.5rem;
        border: none;
    }
</style>