@{
    ViewData["Title"] = "房源創建成功";
    Layout = "_LoginLayout"; // 使用統一的佈局以顯示導航列
}

<!-- 引入專用樣式 -->
<link rel="stylesheet" href="~/css/creation-success.css" asp-append-version="true" />

<div class="creation-success-container">
    <div class="container-fluid">
        <div class="row justify-content-center">
            <div class="col-lg-8 col-xl-6">
                <!-- 成功標題區域 -->
                <div class="success-header">
                    <div class="success-icon mb-4">
                        <i class="fas fa-check-circle" style="font-size: 4rem;"></i>
                    </div>
                    <h1 class="success-title">房源提交成功！</h1>
                    <p class="success-subtitle">您的房源已成功提交，正在進入審核流程</p>
                </div>

                <!-- 審核流程說明卡片 -->
                <div class="creation-success-card">
                    <div class="creation-success-card-header">
                        <h3 class="creation-success-card-title">
                            <i class="fas fa-clipboard-list text-primary"></i>
                            審核流程說明
                        </h3>
                    </div>
                    <div class="creation-success-card-body">
                        <div class="review-process">
                            <!-- 審核步驟 -->
                            <div class="row g-4">
                                <div class="col-md-4">
                                    <div class="review-process-step">
                                        <div class="step-number step-1">
                                            <span>1</span>
                                        </div>
                                        <h5 class="step-title">資料審核</h5>
                                        <p class="step-description">檢查房源基本資訊、照片及相關文件</p>
                                        <div class="text-center">
                                            <span class="step-badge">1-2 個工作天</span>
                                        </div>
                                    </div>
                                </div>
                            
                                <div class="col-md-4">
                                    <div class="review-process-step">
                                        <div class="step-number step-2">
                                            <span>2</span>
                                        </div>
                                        <h5 class="step-title">合規審查</h5>
                                        <p class="step-description">確認房源符合平台規範及法律要求</p>
                                        <div class="text-center">
                                            <span class="step-badge">1 個工作天</span>
                                        </div>
                                    </div>
                                </div>
                            
                                <div class="col-md-4">
                                    <div class="review-process-step">
                                        <div class="step-number step-3">
                                            <span>3</span>
                                        </div>
                                        <h5 class="step-title">正式上架</h5>
                                        <p class="step-description">審核通過後房源將正式上線供租客瀏覽</p>
                                        <div class="text-center">
                                            <span class="step-badge success">即時生效</span>
                                        </div>
                                    </div>
                                </div>
                        </div>
                        
                            <!-- 預計時間 -->
                            <div class="alert-info-custom">
                                <div class="d-flex align-items-center">
                                    <i class="fas fa-clock text-info me-3" style="font-size: 1.25rem;"></i>
                                    <div>
                                        <strong>預計審核時間：2-3 個工作天</strong>
                                        <br>
                                        <small>審核期間如有疑問，我們將透過電子郵件與您聯繫</small>
                                    </div>
                                </div>
                            </div>
                    </div>
                </div>
            </div>

                <!-- 重要提醒 -->
                <div class="creation-success-card">
                    <div class="creation-success-card-header">
                        <h3 class="creation-success-card-title">
                            <i class="fas fa-exclamation-triangle text-warning"></i>
                            重要提醒
                        </h3>
                    </div>
                    <div class="creation-success-card-body">
                    <div class="row g-3">
                        <div class="col-12">
                            <div class="d-flex">
                                <div class="flex-shrink-0">
                                    <i class="fas fa-envelope text-primary me-2"></i>
                                </div>
                                <div>
                                    <strong>保持聯繫管道暢通</strong>
                                    <p class="text-muted mb-0">請確保您的電子郵件和手機號碼可正常接收訊息，以便我們在審核過程中與您聯繫。</p>
                                </div>
                            </div>
                        </div>
                        <div class="col-12">
                            <div class="d-flex">
                                <div class="flex-shrink-0">
                                    <i class="fas fa-edit text-primary me-2"></i>
                                </div>
                                <div>
                                    <strong>補充資料要求</strong>
                                    <p class="text-muted mb-0">如審核過程中需要補充資料，我們會透過電子郵件通知您，請務必在 3 個工作天內提供。</p>
                                </div>
                            </div>
                        </div>
                        <div class="col-12">
                            <div class="d-flex">
                                <div class="flex-shrink-0">
                                    <i class="fas fa-ban text-danger me-2"></i>
                                </div>
                                <div>
                                    <strong>審核未通過處理</strong>
                                    <p class="text-muted mb-0">若房源審核未通過，我們會說明原因並提供修改建議，您可重新提交審核。</p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

                <!-- 操作按鈕 -->
                <div class="text-center">
                    <div class="row g-3">
                        <div class="col-md-6">
                            <a href="@Url.Action("Create", "Property", new { reset = true })" class="creation-success-btn creation-success-btn-outline w-100">
                                <i class="fas fa-plus"></i>
                                繼續刊登房源
                            </a>
                        </div>
                        <div class="col-md-6">
                            <a href="@Url.Action("PropertyManagement", "Landlord")" class="creation-success-btn creation-success-btn-primary w-100">
                                <i class="fas fa-list"></i>
                                查看我的房源
                            </a>
                        </div>
                    </div>
                </div>

                <!-- 額外資訊 -->
                <div class="creation-success-footer">
                    <p>
                        如有任何疑問，請聯繫客服：
                        <a href="mailto:support@zuhause.com">support@zuhause.com</a> 
                        或電話：
                        <a href="tel:0800-123-456">0800-123-456</a>
                    </p>
                </div>
            </div>
        </div>
    </div>
</div>

