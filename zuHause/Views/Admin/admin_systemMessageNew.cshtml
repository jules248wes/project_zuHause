@model AdminSystemMessageNewViewModel
@{
    ViewData["Title"] = Model.PageTitle;
    Layout = "_AdminLayout";
}

<!-- Bootstrap Icons CDN -->
<link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet">
<!-- Admin Styles -->
<link href="~/css/admin-style.css" rel="stylesheet" />

<div class="container-fluid fade-in" style="margin-bottom: 120px; padding-bottom: 40px;">
    <div class="row">
        <div class="col-12">
            <!-- Header Section -->
            <partial name="_AdminPartial/_SystemMessageNew/_HeaderSection" />
            
            <!-- Main Form Section -->
            <partial name="_AdminPartial/_SystemMessageNew/_FormSection" />
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/js/admin_js/system-message-new.js"></script>
    <script>
        // 設定可用使用者資料
        @if (Model.AvailableUsers != null)
        {
            <text>
            window.availableUsersData = @Html.Raw(Json.Serialize(Model.AvailableUsers));
            document.addEventListener('DOMContentLoaded', function() {
                setAvailableUsers(window.availableUsersData);
            });
            </text>
        }
    </script>
}

<partial name="_AdminPartial/_SystemMessageNew/_SystemMessageNewModals" />