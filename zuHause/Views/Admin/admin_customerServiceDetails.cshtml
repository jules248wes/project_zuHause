@model AdminCustomerServiceDetailsViewModel
@{
    ViewData["Title"] = Model.PageTitle;
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid fade-in" style="margin-bottom: 120px; padding-bottom: 40px;">
    <div class="row">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h1 class="h3 mb-0">@Model.PageTitle</h1>
                <button class="btn btn-outline-secondary" onclick="history.back()">
                    <i class="bi bi-arrow-left"></i> 返回列表
                </button>
            </div>
            
            <div class="row">
                <!-- 左欄：對話內容區 -->
                <div class="col-lg-8">
                    <partial name="_AdminPartial/_CustomerServiceDetails/_UserRequestCard" />
                    <partial name="_AdminPartial/_CustomerServiceDetails/_ReplyCard" />
                </div>
                
                <!-- 右欄：案件資訊與管理區 -->
                <div class="col-lg-4">
                    <partial name="_AdminPartial/_CustomerServiceDetails/_CaseInfoCard" />
                    <partial name="_AdminPartial/_CustomerServiceDetails/_ManagementCard" />
                </div>
            </div>
        </div>
    </div>
</div>

<!-- 引入JS檔案 -->
<script src="~/js/admin_js/customer-service-details.js"></script>

<link rel="stylesheet" href="~/css/admin-style.css">