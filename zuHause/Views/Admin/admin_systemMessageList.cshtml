@model AdminSystemMessageListViewModel
@{
    ViewData["Title"] = Model.PageTitle;
    Layout = "_AdminLayout";

}

<!-- Bootstrap Icons CDN -->
<link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet">
<!-- Admin Styles -->
<link href="~/css/admin-style.css" rel="stylesheet" />

<div class="container-fluid fade-in" style="margin-bottom: 120px; padding-bottom: 40px;">
    <div class="row">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h1 class="h3">@Model.PageTitle</h1>
                <div>
                    <button class="btn btn-outline-info me-2">
                        <i class="bi bi-graph-up"></i> 發送統計
                    </button>
                    <a href="~/Admin/admin_systemMessageNew" class="btn btn-primary">
                        <i class="bi bi-plus-circle-fill"></i> 新增訊息
                    </a>
                </div>
            </div>
            
            <!-- Filter and Search Section -->
            <partial name="_AdminPartial/_SystemMessage/_FilterSection" />
            
            <!-- System Message List -->
            <partial name="_AdminPartial/_SystemMessage/_MessageTable" />
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/js/admin_js/system-message.js"></script>
}

<partial name="_AdminPartial/_SystemMessage/_SystemMessageModals" />