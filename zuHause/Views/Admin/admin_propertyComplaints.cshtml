@model zuHause.AdminViewModels.AdminPropertyComplaintsViewModel
@{
    ViewData["Title"] = Model.PageTitle;
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<link href="~/css/admin-layout.css" rel="stylesheet" />

<div class="container-fluid fade-in" style="margin-bottom: 120px; padding-bottom: 40px;">
    <!-- 頁面標題 -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h2 class="fw-bold">⚠️ @Model.PageTitle</h2>
            <p class="text-muted mb-0">處理和追蹤房源相關投訴案件</p>
            @if (ViewBag.Debug != null)
            {
                <div class="alert alert-info mt-2">
                    <strong>調試資訊:</strong> @ViewBag.Debug
                </div>
            }
        </div>
        <div id="statusSummary">
            <span class="badge bg-danger me-2">處理中: <span id="openCount">0</span></span>
            <span class="badge bg-success me-2">已處理: <span id="resolvedCount">0</span></span>
            <span class="badge bg-secondary">已關閉: <span id="closedCount">0</span></span>
        </div>
    </div>

    <!-- 篩選和搜尋區域 -->
    <div class="card mb-4">
        <div class="card-body">
            <form id="searchForm" class="row g-3">
                <div class="col-md-4">
                    <label class="form-label">搜尋關鍵字</label>
                    <div class="input-group">
                        <select id="searchField" class="form-select" style="flex: 0 0 auto; width: auto;">
                            <option value="all">全部欄位</option>
                            <option value="complainantname">投訴人</option>
                            <option value="propertytitle">房源標題</option>
                            <option value="landlordname">房東姓名</option>
                            <option value="complaintcontent">投訴內容</option>
                        </select>
                        <input type="text" id="searchKeyword" class="form-control" placeholder="輸入搜尋關鍵字">
                        <button class="btn btn-outline-secondary" type="button" onclick="performSearch()">
                            <i class="bi bi-search"></i>
                        </button>
                    </div>
                </div>
                <div class="col-md-2">
                    <label class="form-label">處理狀態</label>
                    <select id="statusFilter" class="form-select">
                        <option value="">全部</option>
                        <option value="OPEN">處理中</option>
                        <option value="RESOLVED">已處理</option>
                        <option value="CLOSED">已關閉</option>
                    </select>
                </div>
                <div class="col-md-3">
                    <label class="form-label">日期範圍</label>
                    <div class="input-group">
                        <input type="date" id="dateStart" class="form-control">
                        <span class="input-group-text">至</span>
                        <input type="date" id="dateEnd" class="form-control">
                    </div>
                </div>
                <div class="col-md-3">
                    <label class="form-label">&nbsp;</label>
                    <div class="d-flex gap-2">
                        <button type="button" class="btn btn-primary" onclick="performSearch()">
                            <i class="bi bi-search"></i> 搜尋
                        </button>
                        <button type="button" class="btn btn-outline-secondary" onclick="resetSearch()">
                            <i class="bi bi-arrow-clockwise"></i> 重設
                        </button>
                    </div>
                </div>
            </form>
        </div>
    </div>

    <!-- 投訴列表 -->
    <div class="card">
        <div class="card-header d-flex justify-content-between align-items-center">
            <h5 class="mb-0">投訴列表</h5>
            <div class="text-muted">
                共 <span id="totalCount">@Model.TotalCount</span> 筆投訴記錄
            </div>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-hover">
                    <thead class="table-light">
                        <tr>
                            <th width="12%">投訴編號</th>
                            <th width="15%">投訴人</th>
                            <th width="20%">房源標題</th>
                            <th width="15%">房東</th>
                            <th width="25%">投訴內容摘要</th>
                            <th width="8%">狀態</th>
                            <th width="12%">投訴時間</th>
                            <th width="8%">操作</th>
                        </tr>
                    </thead>
                    <tbody id="complaintsTableBody">
                        @if (Model.Items.Any())
                        {
                            @foreach (var complaint in Model.Items)
                            {
                                <tr>
                                    <td>
                                        <strong class="text-primary">@complaint.ComplaintIdDisplay</strong>
                                    </td>
                                    <td>
                                        <a href="/Admin/admin_userDetails/@complaint.ComplainantId" class="text-decoration-none">
                                            @complaint.ComplainantName
                                        </a>
                                    </td>
                                    <td>
                                        <a href="/Admin/admin_propertyDetails/@complaint.PropertyId" class="text-decoration-none">
                                            @complaint.PropertyTitle
                                        </a>
                                    </td>
                                    <td>
                                        <a href="/Admin/admin_userDetails/@complaint.LandlordId" class="text-decoration-none">
                                            @complaint.LandlordName
                                        </a>
                                    </td>
                                    <td>
                                        <span title="@complaint.ComplaintContent">@complaint.Summary</span>
                                    </td>
                                    <td>
                                        @{
                                            string badgeClass = complaint.Status switch
                                            {
                                                "OPEN" => "bg-danger",
                                                "RESOLVED" => "bg-success",
                                                "CLOSED" => "bg-secondary",
                                                _ => "bg-dark"
                                            };
                                        }
                                        <span class="badge @badgeClass">@complaint.StatusDisplay</span>
                                    </td>
                                    <td>@complaint.CreatedAt.ToString("yyyy-MM-dd HH:mm")</td>
                                    <td>
                                        <button type="button" class="btn btn-sm btn-outline-primary" 
                                                onclick="showComplaintDetails(@complaint.ComplaintId)" 
                                                title="檢視詳情">
                                            <i class="bi bi-eye"></i>
                                        </button>
                                    </td>
                                </tr>
                            }
                        }
                        else
                        {
                            <tr>
                                <td colspan="8" class="text-center text-muted py-4">
                                    <i class="bi bi-inbox me-2"></i>尚無投訴記錄
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>

            <!-- 分頁 -->
            <nav aria-label="投訴列表分頁" class="mt-3" id="pagination">
                <!-- 分頁內容將透過 JavaScript 動態生成 -->
            </nav>
        </div>
    </div>
</div>

<!-- 投訴詳情 Modal -->
<div class="modal fade" id="complaintDetailsModal" tabindex="-1" aria-labelledby="complaintDetailsModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="complaintDetailsModalLabel">投訴詳情</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <div id="complaintDetailsContent">
                    <!-- 投訴詳情內容將透過 AJAX 載入 -->
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">關閉</button>
                <button type="button" class="btn btn-primary" onclick="saveInternalNote()">儲存註記</button>
            </div>
        </div>
    </div>
</div>

<script src="~/js/admin_js/property-complaints.js"></script>
<script>
// 顯示投訴詳情
function showComplaintDetails(complaintId) {
    const modal = new bootstrap.Modal(document.getElementById('complaintDetailsModal'));
    
    // 載入投訴詳情
    fetch(`/Admin/GetComplaintDetails?complaintId=${complaintId}`)
        .then(response => response.json())
        .then(data => {
            if (data.success) {
                renderComplaintDetails(data.data);
                modal.show();
            } else {
                alert('載入投訴詳情失敗：' + data.message);
            }
        })
        .catch(error => {
            console.error('Error:', error);
            alert('載入投訴詳情時發生錯誤');
        });
}

// 渲染投訴詳情
function renderComplaintDetails(complaint) {
    const content = document.getElementById('complaintDetailsContent');
    
    const statusBadgeClass = complaint.Status === 'OPEN' ? 'bg-danger' : 
                           complaint.Status === 'RESOLVED' ? 'bg-success' : 'bg-secondary';
    
    // 安全地處理日期格式
    const formatDate = (dateStr) => {
        if (!dateStr) return '無資料';
        const date = new Date(dateStr);
        return date.toLocaleString('zh-TW', {
            year: 'numeric', 
            month: '2-digit', 
            day: '2-digit', 
            hour: '2-digit', 
            minute: '2-digit'
        });
    };
    
    content.innerHTML = `
        <div class="row">
            <div class="col-md-6">
                <div class="mb-3">
                    <label class="form-label fw-bold">投訴編號</label>
                    <p class="text-primary">${complaint.ComplaintIdDisplay || 'N/A'}</p>
                </div>
                <div class="mb-3">
                    <label class="form-label fw-bold">投訴人</label>
                    <p><a href="/Admin/admin_userDetails/${complaint.ComplainantId || ''}" class="text-decoration-none">${complaint.ComplainantName || '未知用戶'}</a></p>
                </div>
                <div class="mb-3">
                    <label class="form-label fw-bold">房源標題</label>
                    <p><a href="/Admin/admin_propertyDetails/${complaint.PropertyId || ''}" class="text-decoration-none">${complaint.PropertyTitle || '未知房源'}</a></p>
                </div>
                <div class="mb-3">
                    <label class="form-label fw-bold">房東</label>
                    <p><a href="/Admin/admin_userDetails/${complaint.LandlordId || ''}" class="text-decoration-none">${complaint.LandlordName || '未知房東'}</a></p>
                </div>
            </div>
            <div class="col-md-6">
                <div class="mb-3">
                    <label class="form-label fw-bold">處理狀態</label>
                    <div>
                        <span class="badge ${statusBadgeClass} me-2">${complaint.StatusDisplay || '未知'}</span>
                        <select id="statusSelect" class="form-select form-select-sm d-inline-block" style="width: auto;" onchange="updateComplaintStatus(${complaint.ComplaintId || 0}, this.value)">
                            <option value="OPEN" ${complaint.Status === 'OPEN' ? 'selected' : ''}>處理中</option>
                            <option value="RESOLVED" ${complaint.Status === 'RESOLVED' ? 'selected' : ''}>已處理</option>
                            <option value="CLOSED" ${complaint.Status === 'CLOSED' ? 'selected' : ''}>已關閉</option>
                        </select>
                    </div>
                </div>
                <div class="mb-3">
                    <label class="form-label fw-bold">投訴時間</label>
                    <p>${formatDate(complaint.CreatedAt)}</p>
                </div>
                <div class="mb-3">
                    <label class="form-label fw-bold">最後更新</label>
                    <p id="lastUpdated">${formatDate(complaint.UpdatedAt)}</p>
                </div>
                ${complaint.ResolvedAt ? `
                <div class="mb-3">
                    <label class="form-label fw-bold">結案時間</label>
                    <p>${formatDate(complaint.ResolvedAt)}</p>
                </div>
                ` : ''}
            </div>
        </div>
        <div class="row">
            <div class="col-12">
                <div class="mb-3">
                    <label class="form-label fw-bold">投訴內容</label>
                    <div class="p-3 bg-light rounded">
                        ${complaint.ComplaintContent || '無投訴內容'}
                    </div>
                </div>
                <div class="mb-3">
                    <label class="form-label fw-bold">內部註記</label>
                    <textarea id="internalNote" class="form-control" rows="4" placeholder="請輸入內部處理註記...">${complaint.InternalNote || ''}</textarea>
                    <input type="hidden" id="currentComplaintId" value="${complaint.ComplaintId || 0}">
                </div>
            </div>
        </div>
    `;
}


// 儲存內部註記
function saveInternalNote() {
    const complaintId = document.getElementById('currentComplaintId').value;
    const internalNote = document.getElementById('internalNote').value;
    
    const formData = new FormData();
    formData.append('complaintId', complaintId);
    formData.append('internalNote', internalNote);
    
    fetch('/Admin/UpdateInternalNote', {
        method: 'POST',
        body: formData
    })
    .then(response => response.json())
    .then(data => {
        if (data.success) {
            alert('內部註記已更新');
            const lastUpdatedElement = document.getElementById('lastUpdated');
            if (lastUpdatedElement && data.data && data.data.UpdatedAt) {
                const formattedDate = new Date(data.data.UpdatedAt).toLocaleString('zh-TW', {
                    year: 'numeric', 
                    month: '2-digit', 
                    day: '2-digit', 
                    hour: '2-digit', 
                    minute: '2-digit'
                });
                lastUpdatedElement.textContent = formattedDate;
            }
            // 重新載入表格
            performSearch();
        } else {
            alert('更新失敗：' + data.message);
        }
    })
    .catch(error => {
        console.error('Error:', error);
        alert('更新時發生錯誤');
    });
}

// 更新投訴狀態
function updateComplaintStatus(complaintId, status) {
    const formData = new FormData();
    formData.append('complaintId', complaintId);
    formData.append('status', status);
    
    fetch('/Admin/UpdateComplaintStatus', {
        method: 'POST',
        body: formData
    })
    .then(response => response.json())
    .then(data => {
        if (data.success) {
            alert('投訴狀態已更新');
            const lastUpdatedElement = document.getElementById('lastUpdated');
            if (lastUpdatedElement && data.data && data.data.UpdatedAt) {
                const formattedDate = new Date(data.data.UpdatedAt).toLocaleString('zh-TW', {
                    year: 'numeric', 
                    month: '2-digit', 
                    day: '2-digit', 
                    hour: '2-digit', 
                    minute: '2-digit'
                });
                lastUpdatedElement.textContent = formattedDate;
            }
            // 重新載入表格
            performSearch();
            // 更新狀態統計
            updateStatusSummary();
        } else {
            alert('更新失敗：' + data.message);
        }
    })
    .catch(error => {
        console.error('Error:', error);
        alert('更新時發生錯誤');
    });
}
</script>

<style>
.fade-in {
    animation: fadeIn 0.5s ease-in;
}

@@keyframes fadeIn {
    from { opacity: 0; transform: translateY(10px); }
    to { opacity: 1; transform: translateY(0); }
}

.card {
    border: 1px solid rgba(0, 0, 0, 0.125);
    box-shadow: 0 0.125rem 0.25rem rgba(0, 0, 0, 0.075);
}

.table th {
    border-top: none;
    font-weight: 600;
    background-color: #f8f9fa;
}

.badge {
    font-size: 0.75rem;
}

.btn-sm {
    padding: 0.25rem 0.5rem;
}

.form-label {
    font-weight: 500;
    margin-bottom: 0.5rem;
}

.modal-lg {
    max-width: 900px;
}

.bg-light {
    border: 1px solid #dee2e6;
}
</style>