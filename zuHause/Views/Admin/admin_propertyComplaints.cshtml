@{
    ViewData["Title"] = "房源投訴管理";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <!-- 頁面標題 -->
            <div class="d-flex justify-content-between align-items-center mb-4">
                <div>
                    <h2 class="fw-bold">⚠️ 房源投訴管理</h2>
                    <p class="text-muted mb-0">處理和追蹤房源相關投訴案件</p>
                </div>
                <div>
                    <span class="badge bg-danger me-2">待處理: 12</span>
                    <span class="badge bg-warning me-2">處理中: 8</span>
                    <span class="badge bg-success">已完成: 156</span>
                </div>
            </div>

            <!-- 篩選和搜尋區域 -->
            <div class="card mb-4">
                <div class="card-body">
                    <div class="row g-3">
                        <div class="col-md-3">
                            <label class="form-label">搜尋關鍵字</label>
                            <div class="input-group">
                                <input type="text" class="form-control" placeholder="投訴編號、房源標題、投訴人">
                                <button class="btn btn-outline-secondary" type="button">
                                    <i class="bi bi-search"></i>
                                </button>
                            </div>
                        </div>
                        <div class="col-md-2">
                            <label class="form-label">處理狀態</label>
                            <select class="form-select">
                                <option value="">全部</option>
                                <option value="pending">待處理</option>
                                <option value="processing">處理中</option>
                                <option value="completed">已完成</option>
                                <option value="closed">已關閉</option>
                            </select>
                        </div>
                        <div class="col-md-2">
                            <label class="form-label">投訴類型</label>
                            <select class="form-select">
                                <option value="">全部</option>
                                <option value="false_info">資訊不實</option>
                                <option value="quality_issue">房源品質</option>
                                <option value="landlord_issue">房東問題</option>
                                <option value="safety_concern">安全疑慮</option>
                                <option value="other">其他</option>
                            </select>
                        </div>
                        <div class="col-md-2">
                            <label class="form-label">嚴重程度</label>
                            <select class="form-select">
                                <option value="">全部</option>
                                <option value="high">高</option>
                                <option value="medium">中</option>
                                <option value="low">低</option>
                            </select>
                        </div>
                        <div class="col-md-3">
                            <label class="form-label">日期範圍</label>
                            <div class="input-group">
                                <input type="date" class="form-control">
                                <span class="input-group-text">至</span>
                                <input type="date" class="form-control">
                            </div>
                        </div>
                    </div>
                    <div class="row mt-3">
                        <div class="col-12">
                            <button type="button" class="btn btn-primary me-2">
                                <i class="bi bi-search"></i> 搜尋
                            </button>
                            <button type="button" class="btn btn-outline-secondary">
                                <i class="bi bi-arrow-clockwise"></i> 重設
                            </button>
                        </div>
                    </div>
                </div>
            </div>

            <!-- 投訴列表 -->
            <div class="card">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <h5 class="mb-0">投訴列表</h5>
                    <div class="btn-group btn-group-sm">
                        <button type="button" class="btn btn-outline-primary">
                            <i class="bi bi-download"></i> 匯出
                        </button>
                        <button type="button" class="btn btn-outline-secondary">
                            <i class="bi bi-funnel"></i> 進階篩選
                        </button>
                    </div>
                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-hover">
                            <thead class="table-light">
                                <tr>
                                    <th width="5%">
                                        <input type="checkbox" class="form-check-input">
                                    </th>
                                    <th width="10%">投訴編號</th>
                                    <th width="25%">房源資訊</th>
                                    <th width="15%">投訴人</th>
                                    <th width="10%">投訴類型</th>
                                    <th width="8%">嚴重程度</th>
                                    <th width="10%">狀態</th>
                                    <th width="12%">投訴日期</th>
                                    <th width="5%">操作</th>
                                </tr>
                            </thead>
                            <tbody>
