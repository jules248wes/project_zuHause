<div class= "container mt-4" >
    <!-- 1. 目前費用狀態 -->
    <div class="bg-light p-3 rounded border mb-4">
        <h5 class="fw-bold mb-3">目前配送費設定</h5>
        <div class="row g-3">
            <div class="col-md-4">
                <label>目前基礎配送費：</label>
                <div class="form-control-plaintext" id="currentBaseShip">80 元</div>
            </div>

            <div class="col-md-4">
                <label>目前偏遠/離島額外費：</label>
                <div class="form-control-plaintext" id="currentRemoteShip">30 元</div>
            </div>
            <div class="col-md-4">
                <label>設定結束時間：</label>
                <div class="form-control-plaintext" id="endtime">2025/7/01 上午 08:00</div>
            </div>
        </div>
    </div>

    <div class="bg-light p-3 rounded border mb-4">
        <h5 class="fw-bold mb-3">已排程配送費設定</h5>
        <div class="row g-3">
            <div class="col-md-4">
                <label>基礎配送費：</label>
                <div class="form-control-plaintext" id="currentBaseShip">100 元</div>
            </div>

            <div class="col-md-4">
                <label>偏遠/離島額外費：</label>
                <div class="form-control-plaintext" id="currentRemoteShip">50 元</div>
            </div>
            <div class="col-md-4">
                <label>設定開始時間：</label>
                <div class="form-control-plaintext" id="startime">2025/7/01 上午 08:00</div>
            </div>
        </div>
    </div>
    <hr class="my-4">

    <!-- 2. 設定檔切換 -->
    <div class="d-flex gap-3 mb-4 profile-btns">
        <button class="btn btn-outline-secondary" data-id="1">設定檔1（檔期用）</button>
        <button class="btn btn-outline-secondary" data-id="2">設定檔2（平日用）</button>
        <button class="btn btn-outline-secondary" data-id="3">設定檔3（周年用）</button>
        <button class="btn btn-success">執行選中的設定檔</button>
    </div>

    <!-- 3. 可編輯的設定區 -->
    <div class="bg-primary bg-opacity-10 p-3 rounded border mb-4">
        <h5 class="fw-bold">配送費設定</h5>
        <div class="row g-3">
            <div class="col-md-4">
                <label>設定基礎配送費：</label>
                <input type="number" class="form-control" id="shipBaseFee" placeholder="XXX 元">
            </div>

            <div class="col-md-4">
                <label>設定偏遠/離島額外費：</label>
                <input type="number" class="form-control" id="shipRemoteFee" placeholder="XXX 元">
            </div>
        </div>
        <div class="row mt-4">
            <div class="col-md-6">
                <label>執行時間：</label>
                <input type="datetime-local" class="form-control" id="shipExecuteTime">
            </div>
        </div>
    </div>

    <!-- 4. 試算區 -->
    <div class="bg-light p-3 rounded border mb-4">
        <h5 class="fw-bold mb-3">配送費試算</h5>
        <div class="row">
            <!-- 左側輸入 -->
            <div class="col-md-4">
                <label>配送戶數：</label>
                <input type="number" id="calcShipHouse" class="form-control mb-2" value="0">

                <div class="form-check mt-2">
                    <input class="form-check-input" type="checkbox" id="calcShipRemoteChk">
                    <label class="form-check-label">偏遠/離島</label>
                </div>
            </div>
            <!-- 右側結果 -->
            <div class="col-md-8">
                <div class="p-3 border rounded bg-white">
                    <p id="calcShipBaseTxt"></p>

                    <p id="calcShipRemoteTxt"></p>
                    <hr>
                    <h5>合計：<span id="calcShipTotal">0</span> 元</h5>
                </div>
            </div>
        </div>
    </div>

    <!-- 5. 儲存／取消按鈕 -->
    <div class="d-flex justify-content-end gap-3">
        <button id="saveShipFee" class="btn btn-success">✅ 確定儲存設定</button>
        <button id="cancelShipFee" class="btn btn-danger">❌ 取消儲存設定</button>
    </div>
</div>