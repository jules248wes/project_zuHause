<div class="container-fluid py-4">
    <div class="row">
        <!-- 圖片庫（卡片＆滾動） -->
        <div class="col-md-4">
            <div class="panel p-3 bg-white border rounded">
                <h5 class="mb-3">圖片庫</h5>

                <!-- 可滾動區塊 -->
                <div class="image-library overflow-auto" style="max-height: 500px;">
                    <!-- 單張卡片範例 -->
                    <div class="card mb-3">
                        <div class="row g-0 align-items-center">
                            <div class="col-auto">
                                <div class="image-thumb me-3">縮圖</div>
                            </div>
                            <div class="col">
                                <div class="card-body py-2 px-0">
                                    <p class="mb-1"><strong>編號：</strong>1</p>
                                    <p class="mb-1"><strong>名稱：</strong>首頁右側</p>
                                    <p class="mb-1"><strong>類別：</strong>首頁輪播</p>
                                    <p class="mb-1"><strong>位置：</strong>輪播1</p>
                                    <p class="mb-1"><strong>播放：</strong>2025/6/20 16:00 ~ 2025/6/24 18:00</p>
                                    <div class="d-flex gap-2 mt-2">
                                        <button class="btn btn-sm btn-primary">編輯</button>
                                        <button class="btn btn-sm btn-danger">刪除</button>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- 再多張卡片… -->
                    <div class="card mb-3">
                        <div class="row g-0 align-items-center">
                            <div class="col-auto">
                                <div class="image-thumb me-3">縮圖</div>
                            </div>
                            <div class="col">
                                <div class="card-body py-2 px-0">
                                    <p class="mb-1"><strong>編號：</strong>2</p>
                                    <p class="mb-1"><strong>名稱：</strong>首頁橫幅2</p>
                                    <p class="mb-1"><strong>類別：</strong>首頁輪播</p>
                                    <p class="mb-1"><strong>位置：</strong>輪播2</p>
                                    <p class="mb-1"><strong>播放：</strong>2025/6/20 16:00 ~ 2025/6/24 18:00</p>
                                    <div class="d-flex gap-2 mt-2">
                                        <button class="btn btn-sm btn-primary">編輯</button>
                                        <button class="btn btn-sm btn-danger">刪除</button>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <!-- … -->
                </div>

                <!-- 搜尋列：下拉＋輸入＋按鈕 -->
                <div class="row g-2 mt-3">
                    <div class="col-5">
                        <select class="form-select" aria-label="搜尋類別">
                            <option value="">搜尋類別</option>
                            <option value="name">名稱</option>
                            <option value="number">編號</option>
                            <!-- 更多分類… -->
                        </select>
                    </div>
                    <div class="col-7">
                        <div class="input-group">
                            <input type="text" class="form-control" placeholder="搜尋關鍵字">
                            <button class="btn btn-outline-secondary" type="button">搜尋</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- 上傳與編輯表單 -->
        <div class="col-md-8">
            <div class="panel">
                <div class="d-flex justify-content-between align-items-center mb-3">
                    <h5>圖片上傳 / 圖片編輯</h5>
                    <div>
                        <button class="btn btn-sm btn-outline-secondary">圖片上傳</button>
                        <button class="btn btn-sm btn-outline-secondary">圖片編輯</button>
                    </div>
                </div>

                <div class="mb-3">
                    <label class="form-label">選擇檔案</label>
                    <input type="file" class="form-control">
                </div>

                <div class="mb-3">
                    <label class="form-label">圖片名稱</label>
                    <input type="text" class="form-control">
                </div>

                <div class="mb-3">
                    <label class="form-label">圖片連結 (可為空)</label>
                    <input type="url" class="form-control">
                </div>

                <div class="row mb-3">
                    <div class="col-md-6">
                        <label class="form-label">圖片位置</label>
                        <select class="form-select">
                            <option>輪播1</option>
                            <option>輪播2</option>
                            <option>輪播3</option>
                        </select>
                    </div>
                    <div class="col-md-6">
                        <label class="form-label">圖片類別</label>
                        <select class="form-select">
                            <option>租客首頁輪播</option>
                            <option>房東首頁輪播</option>
                            <option>家具首頁輪播</option>
                        </select>
                    </div>
                </div>

                <div class="mb-3">
                    <label class="form-label">播放時間</label>
                    <input type="text" class="form-control" placeholder="起始2025/6/20 16:00 ~ 結束2025/6/24 18:00">
                </div>

                <div class="mb-3">
                    <label class="form-label">畫面預覽</label>
                    <div class="image-thumb">編號 1 圖片預覽</div>
                </div>

                <div class="d-flex justify-content-between">
                    <div>
                        <button class="btn btn-success">確認上傳</button>
                        <button class="btn btn-danger">取消上傳</button>
                    </div>
                    <div>
                        <button class="btn btn-success">確認編輯</button>
                        <button class="btn btn-danger">取消編輯</button>
                    </div>
                </div>

            </div>
        </div>
    </div>
