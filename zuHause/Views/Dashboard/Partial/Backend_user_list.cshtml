@* Views/Dashboard/Partial/Backend_user_list.cshtml *@
<div class="row g-4">
    <!-- 表單區 -->
    <div class="col-md-5">
        <div class="card p-4">
            <h5 class="mb-3">新增 / 編輯後台用戶</h5>

            <div class="mb-3">
                <label for="employeeId" class="form-label">員工 ID</label>
                <input type="text" class="form-control" id="employeeId" placeholder="請輸入員工編號">
            </div>

            <div class="mb-3">
                <label for="employeepassword" class="form-label">員工 密碼</label>
                <input type="text" class="form-control" id="employeepassword" placeholder="請輸入員工密碼">
            </div>

            <div class="mb-3">
                <label for="employeeName" class="form-label">員工姓名</label>
                <input type="text" class="form-control" id="employeeName" placeholder="請輸入員工姓名">
            </div>

            <div class="mb-3">
                <label for="employeeRole" class="form-label">員工權限</label>
                <select class="form-select" id="employeeRole">
                    <option value="超級管理員">超級管理員（📊 📦 👤 🛒 🛠️）</option>
                    <option value="管理員">管理員（📊 👤 🛒）</option>
                    <option value="房源審核員">房源審核員（📦）</option>
                    <option value="客服">客服（👤 🛒）</option>
                </select>
            </div>

            <button class="btn btn-success w-100" onclick="saveBackendUser()">儲存用戶</button>
        </div>
    </div>

    <!-- 用戶表格 -->
    <div class="col-md-7">
        <div class="card p-4">
            <h5 class="mb-3">後台用戶列表</h5>
            <table class="table table-bordered text-center align-middle">
                <thead class="table-light">
                    <tr>
                        <th>員工 ID</th>
                        <th>員工 密碼</th>
                        <th>姓名</th>
                        <th>權限</th>
                        <th>操作</th>
                    </tr>
                </thead>
                <tbody id="backendUserTable">
                    <!-- 用戶資料將由 JS 插入 -->
                </tbody>
            </table>
        </div>
    </div>
</div>
