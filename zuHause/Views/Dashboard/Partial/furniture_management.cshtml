            <div class="d-flex justify-content-between align-items-center mb-2">
                <h5 id="formMode">🆕 家具上傳模式</h5>
                <button class="btn btn-sm btn-outline-secondary" onclick="resetForm()">返回上傳模式</button>
            </div>

            <div class="card p-4" id="furnitureForm">
                <!-- <div class="mb-3">
                  <label class="form-label">選擇家具圖片</label>
                  <input type="file" class="form-control" id="imageUpload" />
                </div> -->
                <div class="mb-3">
                    <label class="form-label">家具名稱</label>
                    <input type="text" class="form-control" id="furnitureName" />
                </div>
                <div class="mb-3">
                    <label class="form-label">家具介紹</label>
                    <textarea class="form-control" id="furnitureDesc"></textarea>
                </div>

                <div class="row mb-3">
                    <div class="col-md-4">
                        <label class="form-label">原價</label>
                        <input type="number" class="form-control" id="originalPrice" />
                    </div>
                    <div class="col-md-4">
                        <label class="form-label">每日租金</label>
                        <input type="number" class="form-control" id="rentPerDay" />
                    </div>
                    <div class="col-md-4">
                        <label class="form-label">年租金（選填）</label>
                        <input type="number" class="form-control" id="rentPerYear" />
                    </div>
                </div>

                <div class="row mb-3">
                    <div class="col-md-4">
                        <label class="form-label">上架庫存</label>
                        <input type="number" class="form-control" id="furnitureStock" />
                    </div>
                    <div class="col-md-4">
                        <label class="form-label">家具類別</label>
                        <select class="form-select" id="furnitureType">
                            <option>沙發</option>
                            <option>書桌</option>
                            <option>衣櫃</option>
                        </select>
                    </div>
                    <div class="col-md-4">
                        <label class="form-label">上架時間</label>
                        <input type="datetime-local" class="form-control mb-2" />
                        <input type="datetime-local" class="form-control" />
                    </div>
                </div>

                <div class="row mb-3">
                    <div class="col-md-3">
                        <div class="form-check">
                            <input class="form-check-input" type="checkbox" id="isHot" />
                            <label class="form-check-label" for="isHot">🔥 熱門商品</label>
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="form-check">
                            <input class="form-check-input" type="checkbox" id="isSpecial" />
                            <label class="form-check-label" for="isSpecial">🎯 特惠商品</label>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <label class="form-label">商品狀態</label>
                        <select class="form-select" id="productStatus">
                            <option>上架</option>
                            <option>下架</option>
                            <option>預購中</option>
                        </select>
                    </div>
                </div>

                <div class="mt-4 d-flex justify-content-between">
                    <button class="btn btn-success" onclick="submitFurniture()">確認上傳</button>
                    <button class="btn btn-danger" onclick="resetForm()">取消上傳</button>

                </div>
            </div>
