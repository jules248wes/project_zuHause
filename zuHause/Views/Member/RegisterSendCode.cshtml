@using zuHause.ViewModels.MemberViewModel
@model VerifyCodeViewModel
@{
    ViewData["Title"] = "會員註冊 - 發送驗證碼";
    var activePage = TempData["activePage"]?.ToString();
}

@await Html.PartialAsync("_PartialRegisterActiveProgress", activePage)

<form asp-action="RegisteFillInfomation" method="post" class="w-100 text-light position-absolute top-50 translate-middle-y">
    <div class="row">
        <div class="col-4 mx-auto d-flex flex-column gap-3 p-5 shadow-lg bg-white-aqua">
            <div class="row">
                <div class="col-8">
                    <button class="btn btn-white-sub ps-0 text-white d-flex align-items-center gap-2  py-0">
                        <i class="bi bi-arrow-left-circle-fill fs-4"></i>
                        <span>回上一步</span>
                    </button>
                </div>
            </div>
            <h1 class="text-start title-text  mb-2">註冊 - 輸入驗證碼</h1>
            <div class="row mx-auto w-100 ">
                <div class="col-12 px-0 pb-2">
                    <small>已發送驗證碼至 @Model.PhoneNumber</small>
                </div>
                <div class="col-12 mx-auto p-0 d-flex flex-column gap-2">
                    <div class="input-group has-validation">
                        <span class="input-group-text rounded-0 px-3 bg-white">
                            <i class="text-aqua bi bi-send-fill"></i>
                        </span>
                        <div class="form-floating is-invalid">
                            <input type="hidden" asp-for="PhoneNumber" />
                            <!-- is-invalid -->
                            <input type="text" class=" form-control rounded-0 pe-5" asp-for="Verify"
                                   placeholder="Username" required>
                            <label asp-for="Verify">請輸入驗證碼</label>
                        </div>
                        <span class="invalid-feedback d-block opacity-100" asp-validation-for="Verify">
                        </span>
                    </div>
                </div>
            </div>
            <div class="row mx-auto w-100 mb-1">
                <div class="col-12 d-flex flex-column align-items-center gap-2 p-0">
                    <button class="btn btn-aqua w-100 rounded-0" type="submit">送出</button>
                </div>
            </div>
            <div class="row mx-auto w-100">
                <div class="col-6 mx-auto">
                    <button type="button" class="btn btn-aqua-sub btn-sm w-100 text-white">重新發送(60)</button>
                </div>
            </div>
        </div>
    </div>
</form>