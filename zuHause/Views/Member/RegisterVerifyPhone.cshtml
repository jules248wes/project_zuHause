@{
    ViewData["Title"] = "會員註冊 - 驗證手機號碼";
}

@await Html.PartialAsync("_PartialRegisterActiveProgress")

<form action="" method="post" class="w-100 text-light position-absolute top-50 translate-middle-y">
    <div class="row">
        <div class="col-4 mx-auto d-flex flex-column gap-3 p-5 shadow-lg bg-white-aqua">
            <h1 class="text-start title-text  mb-3">會員註冊 - 驗證手機號碼</h1>
            <div class="row mx-auto w-100 ">
                <div class="col-12 mx-auto p-0 d-flex flex-column gap-2">
                    <div class="input-group has-validation">
                        <span class="input-group-text rounded-0 px-3 bg-white">
                            <i class="text-aqua bi bi-phone-fill"></i>
                        </span>
                        <div class="form-floating is-invalid">
                            <!-- is-invalid -->
                            <input type="text" class=" is-invalid form-control rounded-0 pe-5" id="floatingInputGroup2"
                                   placeholder="Username" required>
                            <label for="floatingInputGroup2">請輸入手機號碼</label>
                        </div>
                        <div class="invalid-feedback">
                            Please choose a username.
                        </div>
                    </div>
                </div>
            </div>

            <div class="row mx-auto w-100">
                <div class="col-12 d-flex flex-column align-items-center gap-2 p-0">
                    <button class="btn btn-aqua w-100" type="submit">發送驗證碼</button>
                </div>
            </div>
        </div>
    </div>
</form>